@using MVCDay2.DAL.Entities
@model List<Employee>

<div class="card">
    <h5 class="card-header">Employees</h5>
    <div class="card-body">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Employee">Add New Employee</a>
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var i in Model)
                {
                        <tr>
                            <th scope="row">@i.id</th>
                            <td>@i.name</td>
                            <td>@i.age</td>
                            <td>
                                <a class="btn btn-warning" style="color:#000000cc; margin:0px 5px;"
                                   asp-action="Update" asp-controller="Employee" asp-route-id="@i.id">Edit</a>
                                <a class="btn btn-danger"
                                   asp-action="Delete" asp-controller="Employee" asp-route-id="@i.id">Delete</a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
